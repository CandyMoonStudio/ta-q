{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Question",
  "type": "object",
  "required": ["id", "text", "answer"],
  "properties": {
    "id": { "type": "string" },
    "text": { "type": "string" },
    "answer": { "type": "string" },
    "aliases": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "weight": { "type": "number" },
    "status": { "type": "string" },
    "source": { "type": "string" }
  },
  "additionalProperties": true
}
